pipeline {
    agent any
    environment {
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
    }
    stages {
        stage('Install And Configure AWS-CLI') {
            steps {
                sh "bash scripts/install-aws.sh"
            }
        }
        stage('Provision EKS if required') {
            steps {
                sh "bash eks-setup.sh"
            }
        }
        stage('Deploy nginx pod') {
            steps {
                sh ""
            }
        }
        stage('Deploy frontend pod') {
            steps {
                sh "kubectl apply -f kubernetes/frontend.yaml"
            }
        }
        stage('Deploy backend pod') {
            steps {
                sh "kubectl apply -f kubernetes/backend.yaml"
            }
        }
    }
}